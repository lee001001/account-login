<div class="col mx-5">
  <form action="/" method="POST">

    <div class="card border-success" style="max-width: 18rem;">
      <div class="card-header bg-transparent border-success">Account Login</div>
      <div class="card-body text-success">

        <div class="form-group">
          <input type="email" id="fname" name="email" placeholder="Email" value={{email}}>
        </div>

        <div class="form-group">
          <input type="text" id="password" name="password" placeholder="Password">
        </div>
        {{#if error}}
        <small class="mb-3 form-text text-danger ">{{errorMessage}}</small>
        {{/if}}



        <button type="submit" class="btn btn-primary">Sign In</button>


      </div>
  </form>

</div>